{
  "name": "OpenClaw deep healthcheck (portable)",
  "schedule": {
    "kind": "cron",
    "expr": "0 6,19 * * *",
    "tz": "${OPENCLAW_HEALTH_TZ:-America/New_York}"
  },
  "payload": {
    "kind": "agentTurn",
    "message": "Run bash scripts/healthcheck.sh and report verdict, counts, artifact path, and active issues.",
    "timeoutSeconds": 600
  },
  "sessionTarget": "isolated",
  "delivery": {
    "mode": "announce"
  },
  "enabled": true
}
