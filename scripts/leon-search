#!/usr/bin/env bash
# leon-search â€” Search indexed project code (two-tier: ripgrep + vector).
#
# Usage:
#   leon-search "authentication hook"
#   leon-search "useStore" --project Motorev --topk 5
#   leon-search "API error" --project "Leon System"
#
set -euo pipefail
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT="$(dirname "$SCRIPT_DIR")"
cd "$ROOT"
exec "${ROOT}/venv/bin/python3" -m tools.searcher "$@"
